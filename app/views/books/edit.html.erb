<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<h1>Edit</h1>
<%= form_with model:@book, local: true do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Edit' %>
  <td>
    <%= link_to "show", book_path(book.id) %>
    <%= link_to "Back", :action => 'index' %>
  </td>
<% end %>