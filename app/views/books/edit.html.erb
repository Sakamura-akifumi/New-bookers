<% if flash[:alert] %>
  <p><%= flash[:alert] %></p>
<% end %>

<h1>Editing Book</h1>
<%= form_with model:@book, local: true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %><br>
  <br>
  <%= f.submit 'Update Book' %><br>
  <br>
  <%= link_to "show", book_path(@book.id) %>
  |
  <%= link_to "Back", :action => 'index' %>
  </br>
<% end %>